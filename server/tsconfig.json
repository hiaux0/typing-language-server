{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"es2020"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"resolveJsonModule": true,
		"types": ["jest"]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"src/modules/scratchpad.ts",
		"*test.ts",
		".vscode-test"
	]
}
